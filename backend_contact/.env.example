# Frontend-related container envs (mirrored for consistency)
REACT_APP_API_BASE=http://localhost:4001
REACT_APP_BACKEND_URL=http://localhost:4001
REACT_APP_FRONTEND_URL=http://localhost:3000
REACT_APP_WS_URL=
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_ENABLE_SOURCE_MAPS=1
REACT_APP_PORT=4001
REACT_APP_TRUST_PROXY=1
REACT_APP_LOG_LEVEL=info
REACT_APP_HEALTHCHECK_PATH=/health
REACT_APP_FEATURE_FLAGS=
REACT_APP_EXPERIMENTS_ENABLED=0

# Backend service envs
PORT=4001
NODE_ENV=development
TRUST_PROXY=1
LOG_LEVEL=info
HEALTHCHECK_PATH=/health

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000

# Rate limiting
RATE_LIMIT_POINTS=5
RATE_LIMIT_DURATION=60

# Basic spam protection (honeypot field name)
HONEYPOT_FIELD=website

# SMTP (primary transport)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM="Portfolio Contact <no-reply@example.com>"
SMTP_TO=you@example.com

# Optional: SendGrid transport (set SENDGRID_API_KEY to enable)
SENDGRID_API_KEY=
SENDGRID_FROM="Portfolio Contact <no-reply@example.com>"
SENDGRID_TO=you@example.com

# Optional: Resend transport (set RESEND_API_KEY to enable)
RESEND_API_KEY=
RESEND_FROM="Portfolio Contact <no-reply@example.com>"
RESEND_TO=you@example.com
